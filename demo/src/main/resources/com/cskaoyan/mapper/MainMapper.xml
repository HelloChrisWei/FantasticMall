<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cskaoyan.mapper.MainMapper">

    <select id="readGoodsTotal" resultType="java.lang.Integer">
        select count(*)
        from cskaoyan_mall_goods
    </select>

    <select id="readOrderTotal" resultType="java.lang.Integer">
        select count(*)
        from cskaoyan_mall_order
    </select>

    <select id="readProductTotal" resultType="java.lang.Integer">
        select count(*)
        from cskaoyan_mall_goods_product
    </select>

    <select id="readUserTotal" resultType="java.lang.Integer">
        select count(*)
        from cskaoyan_mall_user
    </select>

</mapper>